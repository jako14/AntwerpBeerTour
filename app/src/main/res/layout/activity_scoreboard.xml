<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@drawable/back_frame"
    >

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/header"
        />
    <ImageButton
        android:layout_width="60dp"
        android:layout_height="50dp"
        android:id="@+id/buttonLogo"
        android:layout_marginTop="5dp"
        android:background="@drawable/logo"
        android:layout_marginLeft="30dp"
        />
    <ImageButton
        android:layout_width="60dp"
        android:layout_height="50dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/lang"
        android:id="@+id/buttonLanguage"
        android:layout_marginRight="30dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Highscore"
        android:id="@+id/textViewHighscore"
        android:textSize="62sp"
        android:textColor="@color/white"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp" />

    <TextView
        android:layout_width="35dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="1."
        android:textColor="@color/white"
        android:textSize="32sp"
        android:id="@+id/textViewOne"
        android:layout_below="@+id/textViewHighscore"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="30dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <TextView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Alina"
        android:textColor="@color/white"
        android:textSize="32sp"
        android:id="@+id/textViewAlina"
        android:layout_below="@+id/textViewHighscore"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="50dp"
        android:layout_alignLeft="@+id/textViewOne"
        android:layout_alignStart="@+id/textViewOne"/>

    <TextView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="4/5"
        android:textColor="@color/white"
        android:textSize="32sp"
        android:id="@+id/textViewScoreFirst"
        android:layout_below="@+id/textViewHighscore"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="0dp"
        android:layout_toRightOf="@+id/textViewAlina"
       />

    <TextView
        android:layout_width="35dp"
        android:textColor="@color/white"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="2."
        android:textSize="32sp"
        android:id="@+id/textViewTwo"
        android:layout_below="@+id/textViewOne"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="30dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="200dp"
        android:textColor="@color/white"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Paul"
        android:textSize="32sp"
        android:id="@+id/textViewPaul"
        android:layout_below="@+id/textViewAlina"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="50dp"
        android:layout_alignLeft="@+id/textViewOne"
        android:layout_alignStart="@+id/textViewOne"/>

    <TextView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="3/5"
        android:textColor="@color/white"
        android:textSize="32sp"
        android:id="@+id/textViewScoreSecond"
        android:layout_below="@+id/textViewScoreFirst"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="0dp"
        android:layout_toRightOf="@+id/textViewAlina"
        />

    <TextView
        android:layout_width="35dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="3."
        android:textColor="@color/white"
        android:textSize="32sp"
        android:id="@+id/textViewThree"
        android:layout_below="@+id/textViewTwo"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="30dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Camilla"
        android:textColor="@color/white"
        android:textSize="32sp"
        android:id="@+id/textViewCamila"
        android:layout_below="@+id/textViewPaul"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="50dp"
        android:layout_alignLeft="@+id/textViewOne"
        android:layout_alignStart="@+id/textViewOne"/>

    <TextView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="2/5"
        android:textSize="32sp"
        android:textColor="@color/white"
        android:id="@+id/textViewScoreThird"
        android:layout_below="@+id/textViewScoreSecond"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="0dp"
        android:layout_toRightOf="@+id/textViewAlina"
        />

    <TextView
        android:layout_width="35dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="4."
        android:textColor="@color/white"
        android:textSize="32sp"
        android:id="@+id/textViewFour"
        android:layout_below="@+id/textViewThree"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="30dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Stijn"
        android:textColor="@color/white"
        android:textSize="32sp"
        android:id="@+id/textViewStijn"
        android:layout_below="@+id/textViewCamila"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="50dp"
        android:layout_alignLeft="@+id/textViewOne"
        android:layout_alignStart="@+id/textViewOne"/>

    <TextView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="1/5"
        android:textColor="@color/white"
        android:textSize="32sp"
        android:id="@+id/textViewScoreFourth"
        android:layout_below="@+id/textViewScoreThird"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="0dp"
        android:layout_toRightOf="@+id/textViewAlina"
        />

    <TextView
        android:layout_width="35dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="5."
        android:textColor="@color/white"
        android:textSize="32sp"
        android:id="@+id/textViewFive"
        android:layout_below="@+id/textViewFour"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="30dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Jakub"
        android:textColor="@color/white"
        android:textSize="32sp"
        android:id="@+id/textViewJacob"
        android:layout_below="@+id/textViewStijn"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="50dp"
        android:layout_alignLeft="@+id/textViewOne"
        android:layout_alignStart="@+id/textViewOne"/>
    <TextView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="1/5"
        android:textColor="@color/white"
        android:textSize="32sp"
        android:id="@+id/textViewScoreFifth"
        android:layout_below="@+id/textViewScoreFourth"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="0dp"
        android:layout_toRightOf="@+id/textViewAlina"
        />

</RelativeLayout>